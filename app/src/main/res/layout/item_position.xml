<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBarGroup"
            android:text="Grupo A"
            android:textColor="@color/colorTextBarItems" />

        <TextView
            android:id="@+id/textInfoGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBarInfoGroup"
            android:text="   Pos.                                           PJ        Gol       Dif.       Pts"
            android:textColor="@color/colorTextBarItems" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPos1"
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1."
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgTeamPos1"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:scaleX="0.8"
                android:scaleY="0.7"
                app:srcCompat="@mipmap/uruguay_round" />

            <TextView
                android:id="@+id/textNamePos1"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Venezuela"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textPJ1"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textGoles1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10:7"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textDifGol1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+10"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textPts1"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="9"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPos2"
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4."
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgTeamPos2"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:scaleX="0.8"
                android:scaleY="0.7"
                app:srcCompat="@mipmap/qatar_round" />

            <TextView
                android:id="@+id/textNamePos2"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Qatar"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textPJ2"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textGoles2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10:7"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textDifGol2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+10"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textPts2"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="9"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPos3"
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4."
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgTeamPos3"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:scaleX="0.8"
                android:scaleY="0.7"
                app:srcCompat="@mipmap/venezuela_round" />

            <TextView
                android:id="@+id/textNamePos3"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Venezuela"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textPJ3"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textGoles3"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1:7"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textDifGol3"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+10"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textPts3"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="9"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPos4"
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4."
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgTeamPos4"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:scaleX="0.8"
                android:scaleY="0.7"
                app:srcCompat="@mipmap/peru_round" />

            <TextView
                android:id="@+id/textNamePos4"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Venezuela"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textPJ4"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textGoles4"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10:7"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textDifGol4"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+10"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textPts4"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>

